<?xml version="1.0" encoding="utf-8"?>
<com.idogoo.cardview.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPadding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:maxHeight="50dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/commnt_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
            
            <TextView
                android:id="@+id/commnt_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
            
            <RatingBar 
                android:id="@+id/comment_rating_bar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="5"
                />
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/user_tips"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                 >
            </android.support.v7.widget.RecyclerView>
            
             <TextView
                android:id="@+id/commnt_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
            
        </LinearLayout>
    </RelativeLayout>

</com.idogoo.cardview.CardView>